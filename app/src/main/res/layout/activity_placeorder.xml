    <customfonts.Medium_Textview
        android:id="@+id/medium_Textview"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:src="@drawable/btn"
        android:text="Review Pick"
        android:textColor="@color/dark_text"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/medium_Textview">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dfdfdf" />


            <customfonts.Regular_Textview
                android:id="@+id/regular_Textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:src="@drawable/btn"
                android:text="Order Review"
                android:textColor="@color/medium_text"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/corner_layout"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <customfonts.Regular_Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:src="@drawable/btn"
                                android:text="Date"
                                android:textColor="@color/medium_text"
                                android:textSize="12sp" />


                            <customfonts.Regular_Textview
                                android:id="@+id/in_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="22dp"
                                android:layout_marginStart="18dp"
                                android:layout_weight="1"
                                android:text="Select Date"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="14sp" />

                            <customfonts.Regular_Textview
                                android:id="@+id/btn_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="Edit"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <customfonts.Regular_Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:src="@drawable/btn"
                                android:text="Time"
                                android:textColor="@color/medium_text"
                                android:textSize="12sp" />


                            <customfonts.Regular_Textview
                                android:id="@+id/in_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="22dp"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"

                                android:text="Select Time"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="14sp" />

                            <customfonts.Regular_Textview
                                android:id="@+id/btn_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center|end"
                                android:text="Edit"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="#cfcfcf"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <customfonts.Regular_Textview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/btn"
                        android:text="Delivery Address"
                        android:textColor="@color/medium_text"
                        android:textSize="12sp" />


                    <customfonts.Regular_Textview
                        android:id="@+id/place_pick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/btn"
                        android:text="Edit"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="12sp" />


                </LinearLayout>

                <customfonts.Regular_Textview
                    android:id="@+id/placeDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Please Select"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="13sp" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/cartitemrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:divider="#fff"
                android:dividerHeight="0dp"
                android:scrollbars="none" />


            <customfonts.Regular_Textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="18dp"
                android:src="@drawable/btn"
                android:text="invoice detail shall be available here within 24 hours of pick"
                android:textColor="@color/medium_text"
                android:textSize="13sp" />


        </LinearLayout>

    </ScrollView>


    <customfonts.Regular_Textview
        android:id="@+id/btn_placeOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/btn"
        android:text="Confirm Order"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/frameLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/loadingImage"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:src="@drawable/loading" />


    </FrameLayout>


</RelativeLayout>
